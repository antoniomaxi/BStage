<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddLocalesActivity"
    android:id="@+id/drawerAddLocales">

    <android.support.v7.widget.CardView
        android:layout_margin="30dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añadir un local"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/nombreLocal"
                    android:background="@drawable/edittextstyle"
                    android:hint="Nombre del local"
                    android:layout_marginTop="25dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/direccionLocal"
                    android:background="@drawable/edittextstyle"
                    android:hint="Direccion"
                    android:layout_marginTop="25dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <EditText
                    android:id="@+id/descripcionLocal"
                    android:background="@drawable/edittextstyle"
                    android:hint="Descripcion"
                    android:layout_marginTop="25dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <EditText
                    android:id="@+id/precioLocal"
                    android:background="@drawable/edittextstyle"
                    android:hint="Precio"
                    android:layout_marginTop="25dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <EditText
                    android:id="@+id/categoriaLocal"
                    android:background="@drawable/edittextstyle"
                    android:hint="Categoria"
                    android:layout_marginTop="25dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <EditText
                    android:id="@+id/urlImagenLocal"
                    android:background="@drawable/edittextstyle"
                    android:hint="url Imagen"
                    android:layout_marginTop="25dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/btnAddLocal"
                    android:background="@drawable/buttonstylepink"
                    android:text="Añadir"/>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</android.support.v4.widget.DrawerLayout>